<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray01"
    android:orientation="vertical">

    <com.huaqie.wubingjie.widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="个人信息"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="19dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="19dp"
                >
                <ImageView
                    android:id="@+id/imv_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/default_user_icon"/>
                <TextView
                    android:layout_toRightOf="@id/imv_avatar"
                    android:id="@+id/tv_nickname"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="昵称"
                    android:textColor="@color/black02"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_below="@id/tv_nickname"
                    android:layout_toRightOf="@id/imv_avatar"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imv_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_sex_woman_checked"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="学校"
                        android:textColor="#000"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_school_isstudent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:text="清华  在读"
                        android:textColor="@color/gray09"
                        android:textSize="15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_01"/>

                <LinearLayout
                    android:id="@+id/ll_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="生日"
                        android:textColor="#000"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:text="1999-09-01"
                        android:textColor="@color/gray09"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_past_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/line_01"/>
                    <TextView
                        android:layout_margin="15dp"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="以往任务"
                        android:textColor="#000"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp"
                >
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textColor="#000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/gray09"
                    android:textSize="15sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_add_friend"
                android:background="@drawable/shape_button_bg_green"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="加好友"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/btn_chat"
                android:background="@drawable/shape_button_bg_green"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="发消息"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/btn_del_friend"
                android:background="@drawable/shape_button_bg_gray"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textColor="@color/black02"
                android:text="删除好友"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
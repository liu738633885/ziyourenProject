<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="clip_vertical"
        android:padding="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_type_money"
            android:text="收入"
            android:textSize="14sp"
            android:textColor="@color/black02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="两天前"
            android:textColor="#666"
            android:textSize="14sp"/>
        <CheckBox
            android:layout_marginLeft="10dp"
            android:id="@+id/cb_up_down"
            android:background="@drawable/selector_cb_updown"
            android:button="@null"
            android:checked="false"
            style="@null"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_child_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line_01"/>

        <LinearLayout
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务名称:"
                android:textColor="@color/black02"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_account_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务名称"
                android:textColor="#666"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="途径:"
                android:textColor="@color/black02"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱包支付"
                android:textColor="#666"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间:"
                android:textColor="@color/black02"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_create_time"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08-27 16:38"
                android:textColor="#666"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_01"/>


</LinearLayout>
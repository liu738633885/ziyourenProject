<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/imv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="13dp"
            android:src="@mipmap/default_user_icon"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:maxLength="10"
                android:maxLines="1"
                android:text="姓名"
                android:textColor="#222"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_school_isstudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname"
                android:layout_marginTop="6dp"
                android:text="学校  状态"
                android:textColor="#666"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_school_isstudent"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:text="手机号:"
                android:textColor="#666"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_school_isstudent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/tv_phone"
                android:text="138888888"
                android:textColor="@color/super_green"
                android:textSize="14sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_button_bg_red"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_button_bg_green"
                android:text="取消接受"
                android:textColor="@color/white"
                android:textSize="13sp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/line_01"/>
</LinearLayout>
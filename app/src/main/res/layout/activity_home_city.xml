<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.huaqie.wubingjie.widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="选择城市"
        app:mode="0"/>

    <me.yokeyword.indexablelistview.IndexableStickyListView
        android:id="@+id/home_city_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:indexBar_textColor="#2bb8aa"
        app:indexBar_textSize="@dimen/smallTextSize"
        app:indexListView_type_overlay="center"/>

</LinearLayout>

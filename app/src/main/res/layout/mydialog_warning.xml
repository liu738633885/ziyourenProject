<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/shape_bg_corners8dp_white"
              android:layout_width="240dp"
              android:gravity="center_horizontal"
              android:layout_height="wrap_content"
              android:padding="10dp">
    <ImageView
        android:layout_width="40dp"
        android:src="@mipmap/icon_warning"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="警示文字"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black02"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="取消"
            android:layout_margin="10dp"
            android:textSize="10dp"
            android:background="@drawable/shape_button_bg_gray09"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btn_ok"
            android:textSize="10dp"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_button_bg_green"
            android:textColor="@color/white"
            android:text="确定"
            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>
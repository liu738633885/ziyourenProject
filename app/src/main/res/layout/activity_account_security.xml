<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    >

    <com.huaqie.wubingjie.widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:center_text="账户与安全"
        app:mode="0"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.huaqie.wubingjie.widgets.ChooseLayout
                android:id="@+id/cl_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:ChooseLayout_tv_text="昵称"/>

            <com.huaqie.wubingjie.widgets.ChooseLayout
                android:id="@+id/cl_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ChooseLayout_tv_text="手机号"/>
            <com.huaqie.wubingjie.widgets.ChooseLayout
                android:id="@+id/cl_alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ChooseLayout_tv_text="支付宝"/>

            <com.huaqie.wubingjie.widgets.ChooseLayout
                android:id="@+id/cl_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ChooseLayout_tv_text="修改账户密码"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

